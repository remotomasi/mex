#!/usr/bin/gnuplot
reset
set terminal png
set term png size 1024,600 #800 pixels by 600 pixels

set datafile separator " "
set xdata time
set timefmt "%Y-%m-%d %H"
set xrange [time(0):time(0) + 5*24*60*60]
set format x "h%H\n%d/%m\n%a"
set xlabel "Time"
set xtics font ", 10"

set ytics 500
set yrange [0:5000]
set ylabel 'm/hPa'
set y2tics 5
set y2range [-10:50]
set y2label 'Â°C'

set title "Weather Forecast by Metcheck and Remo Tomasi"
set key lmargin
set key font ",10"
set grid
set size 1, 1 # ratio 1:1

set style data lines
set bars small

plot "DATAS/weatherForecast.csv" u 1:3:($3 - 5):3 w errorlines ls 1 pt 0 lt 1 lc rgb "red" axes x1y2 ti "Temp", \
"" using 1:4 title "DewP" axes x1y2 lc "dark-green", \
"" using 1:18 title "0Lev" axes x1y1 lc "orange"
